syntax = "v1"

info (
	title:   "article api"
	version: "type version here"
)

type (
	PublishRequest {
		Title   string `json:"title"`
		Content string `json:"content"`
	}
	PublishResponse {
		ArticleId int64 `json:"article_id"`
	}
)

@server (
	prefix: /api/article
	jwt:    Auth
)
service article-api {
	@handler PublishHandler
	post /publish (PublishRequest) returns (PublishResponse)
}

